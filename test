
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import java.util.List;

public interface ContactPlatformLoginRepository extends JpaRepository<ContactPlatformLogin, Long> {

    @Query("SELECT cpl.contact FROM ContactPlatformLogin cpl WHERE cpl.appKey = :appKey AND LOWER(cpl.platformLogin) IN :platformLogins")
    List<Contact> findContactsByAppKeyAndPlatformLogins(@Param("appKey") String appKey, @Param("platformLogins") List<String> platformLogins);
}
